<!DOCTYPE html>
<html>
<head>
  <title>
		<% if content_for?(:title) %>
			<%= yield(:title) %>
		<% else %>
			Lunch Tracker
		<% end %>
  </title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
		<% flash.each do |key, value| %>
			<div class='flash' id='<%= key %>'>
				<%= value %>
			</div>
		<% end %>
		<%= yield %>
	</div>
</body>
</html>
